# .github/actions/setup-python/action.yml
name: 'Setup Python'
description: 'Set up a specific version of Python'
inputs:
  python-version:
    description: 'The version of Python to install'
    required: true
runs:
  using: 'composite'
  steps:
    - name: Install Python
      run: |
        sudo apt-get update
        sudo apt-get install -y python${{ inputs.python-version }}
      shell: bash
